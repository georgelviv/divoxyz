{
  "name": "dyvoxyz",
  "type": "module",
  "directories": {
    "serve": "dist/client"
  },
  "main": "server/index.js",
  "scripts": {
    "dev": "node server",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build --ssrManifest --config configs/vite.config.ts --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.tsx --config configs/vite.config.ts --outDir dist/server",
    "lint": "eslint -c configs/.eslintrc.cjs  --ext ts,tsx .",
    "prettier:write": "bunx prettier --config configs/.prettierrc --ignore-path configs/.prettierignore . --write",
    "prettier:check": "bunx prettier --config configs/.prettierrc --ignore-path configs/.prettierignore . --check",
    "check": "bun run lint && bun run prettier:check && bun run compare-dependencies",
    "deploy": "firebase deploy",
    "emulator": "firebase emulators:start",
    "preview": "cross-env NODE_ENV=production node server",
    "prepare": "husky",
    "analyze-bundle": "bunx vite-bundle-visualizer --config configs/vite.config.ts",
    "compare-dependencies": "bun run scripts/compare-dependencies.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/dom-serial": "^1.0.6",
    "@types/express": "^4.17.21",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.65",
    "@types/react-dom": "^18.2.21",
    "@types/react-syntax-highlighter": "^15.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "latest",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@techstark/opencv-js": "^4.9.0-release.3",
    "classnames": "^2.5.1",
    "compression": "^1.7.4",
    "express": "^4.18.3",
    "firebase": "^10.10.0",
    "framer-motion": "^11.0.13",
    "lucide-react": "^0.363.0",
    "ol": "^9.1.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-katex": "^7.0.0",
    "remark-github-blockquote-alert": "^1.2.0",
    "remark-math": "^6.0.0",
    "rxjs": "^7.8.1",
    "sirv": "^2.0.4",
    "totp-generator": "^1.0.0"
  }
}
