{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/app/core/*"],
      "@features/*": ["./src/app/features/*"],
      "@posts/*": ["./src/app/posts/*"],
      "@shared/*": ["./src/app/shared/*"]
    },
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },
  "include": ["./src"]
}
